<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_masked"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <android.support.v7.widget.Toolbar
                app:titleTextColor="@color/white"
                app:titleTextAppearance="@style/ToolbarTitle"
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />

            <View
                android:id="@+id/vLine"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/border_gray"
                />


            <LinearLayout
                android:id="@+id/llToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/vLine"
                android:layout_marginTop="@dimen/today_title_margin_top_bottom"
                android:layout_marginBottom="@dimen/today_title_margin_top_bottom"
                android:layout_marginLeft="@dimen/main_activity_margin"
                android:layout_marginRight="@dimen/main_activity_margin"
                tools:background = "@color/white_50"
                >
                <ImageView
                    android:layout_width="@dimen/calendar_image_size"
                    android:layout_height="@dimen/calendar_image_size"
                    android:padding="@dimen/calendar_image_padding"
                    android:src="@drawable/ico_calendar"
                    />

                <TextView
                    android:id="@+id/tvToday"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="1. Ramazan/ 6. Juni"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/today_title_text_size"
                    />


            </LinearLayout>

            <ScrollView
                android:id="@+id/svSinglePageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llToday"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                tools:visibility = "visible"
                android:fadeScrollbars="false"
                >
                <TextView
                    android:id="@+id/tvSinglePageContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/white"
                    android:textSize="@dimen/today_title_text_size"
                    android:gravity="center"
                    />
            </ScrollView>

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/llToday"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>


    </FrameLayout>

    <ListView
        android:background="@color/dark_green"
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingTop="30dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>